      <%= form.text_field :last_name, class:"form-control", placeholder:"Last Name (eg. Jhon)"%>
  </div><br/>

  <div class="field form-group">
    
      <%= form.text_field :email, class:"form-control", placeholder:"email: (eg. name@example.com)" %>
  </div><br/>

  <div class="field form-group">
   
      <%= form.text_field :phone, class:"form-control", placeholder:"Phone Number (eg. 020031003)" %>
  </div><br>

  <div class="field form-group">
    
      <%= form.text_field :twitter, class:"form-control", placeholder:"Twitter account (eg. @name)" %>
  </div><br>
  <div class="field form-group">
    
      <%= form.number_field :user_id, id: :firend_user_id, class:"form-control", value:current_user.id, type: :hidden %>
  </div>
